{
  "compilerOptions": {
    "baseUrl": "../",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "es2017.object",
      "dom"
    ],
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules"
  ]
}
